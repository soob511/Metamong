<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mycompany.metamong.daoMain.ColumnDao">
	<select id="selectColumnList" parameterType="int"
		resultType="Column">
		SELECT table_no, col_id,
		col_nm,data_type,col_length,col_isnullable,col_ispk,col_order
		FROM
		"COLUMN"
		WHERE table_no = #{tableNo}
		ORDER BY col_order

	</select>
	<insert id="insertApplyColumn" parameterType="ApplyColumn">
		INSERT INTO
		apply_col(apply_no,col_id,col_nm,data_type,col_length,col_isnullable,col_ispk,col_order)
		VALUES(#{applyNo},#{colId},#{colNm},#{dataType},#{colLength},#{colIsnullable},#{colIspk},#{colOrder})
	</insert>


	<select id="selectColumnByApplyNo" parameterType="int"
		resultType="Column">
		SELECT  col_id,
		col_nm,data_type,col_length,col_isnullable,col_ispk
		FROM
		apply_col
		WHERE apply_no = #{applyNo}
		ORDER BY col_order

	</select>
</mapper>
	